{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "example/**/*",
    "eslint.config.js", // 添加 ESLint 配置文件
    "scripts/**/*",     // 如果有其他脚本文件，如 dts-mv.ts
    "vite.config.ts",   // Vite 配置文件
    "**/.*.*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}
